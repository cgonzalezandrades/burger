<div class="container">

  <div class="row">

    <div class="col-sm-12" id="title">
      <h1>Eat Those Burgers</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 picture-colunm">
      <!--      Picture HERE-->
      <img src="/img/burger.gif">

    </div>
  </div>

  <div class="row burgers-form">


    <div class="col-xs-6">
      <h2 id="columns-title">Eat one of These</h2>

      <div id="burger-list">

        {{#each hamburgers}}

        <form action="/update?_method=PUT" method="POST">

          <input type="hidden" name="id" value="{{this.id}}">


          <div class="col-sm-8">
            {{#unless this.devoured}}
            <h4>{{this.id}} - {{this.burger_name}}</h4>
            <!--          <br>-->
          </div>

          <div class=" col-md-4">
            <br>
            <button class="btn btn-default" type="submit">Eat Me!</button>

          </div>

          {{/unless}}

        </form>

        {{/each}}

      </div>

    </div>


    <div class="col-xs-6 devoured-colunm">

      <div class="col-sm-12">
        <h2 id="columns-title">These are Gone !</h2>
        <div id="eaten-list">

        {{#each hamburgers}} {{#if this.devoured}}

        <p>{{this.id}}. {{this.burger_name}}</p>

        {{/if}} {{/each}}
</div>

      </div>

    </div>




  </div>

<div class="row">
  <div class="col-xs-4 col-xs-offset-4" id="submit-burger">
    <h2>Add a Burger</h2>

    <form method="POST" action="/create" class="button-size">


      <div class="input-group">
        <input type="text" name="burger" class="form-control" placeholder="Burgerme"></input>
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit">Submit!</button>
        </span>
      </div>

    </form>
  </div>
</div>

</div>




  <div class=" row footer">
    <h3>Carlos Gonzalez</h3>
  </div>
